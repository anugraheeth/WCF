@{
    ViewBag.Title = "Home";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">File Management System</h2>
        <p class="text-muted">Manage ZIP files easily</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Batch Processing</h5>
                    <p class="card-text">Process all ZIP files in batch</p>
                    @Html.ActionLink("Start", "Batch", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Manual Processing</h5>
                    <p class="card-text">Process a specific ZIP file</p>
                    @Html.ActionLink("Start", "Manual", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Search Files</h5>
                    <p class="card-text">Search extracted files</p>
                    @Html.ActionLink("Search", "Search", null, new { @class = "btn btn-warning" })
                </div>
            </div>
        </div>
    </div>
</div>
