@{
    ViewBag.Title = "Manual Processing";
}

<div class="container mt-5">
    <h2 class="mb-3">Manual ZIP Processing</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                <div class="mb-3">
                    <label class="form-label">ZIP File Name</label>
                    <input type="text" name="zipName" class="form-control" placeholder="example.zip" required />
                </div>

                <button type="submit" class="btn btn-success">
                    Process ZIP
                </button>
                <a class="btn btn-secondary ms-2" href="@Url.Action("Index")">
                    Cancel
                </a>
            }

            @if (ViewBag.Result != null)
            {
                <hr />
                <div class="alert alert-info">
                    <strong>Result:</strong><br />
                    @ViewBag.Result
                </div>
            }
        </div>
    </div>
</div>
